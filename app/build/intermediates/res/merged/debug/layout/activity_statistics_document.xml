<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:healthy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/statistics_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/statistics_rb_day"
            style="@style/RadioButtonStyle"
            android:layout_marginTop="10dp"
            android:drawableBottom="@drawable/tab_bottom_line"
            android:drawablePadding="10dp"
            android:text="@string/daysum"/>

       <!-- <RadioButton
            android:id="@+id/statistics_rb_week"
            style="@style/RadioButtonStyle"
            android:layout_marginTop="10dp"
            android:drawableBottom="@drawable/tab_bottom_line"
            android:drawablePadding="10dp"
            android:text="@string/weeksum"/>-->

        <RadioButton
            android:id="@+id/statistics_rb_month"
            style="@style/RadioButtonStyle"
            android:layout_marginTop="10dp"
            android:drawableBottom="@drawable/tab_bottom_line"
            android:drawablePadding="10dp"
            android:text="@string/monthsum"/>
    </RadioGroup>

    <FrameLayout
        android:id="@+id/statistics_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
