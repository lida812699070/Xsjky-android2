<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="48dip"
                android:background="@drawable/flipper_head_blue_background"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_main_menu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:padding="5dp"
                    android:src="@drawable/menu"/>
            </LinearLayout>

            <include layout="@layout/weiget_head"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_content_unUserBindTool"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:padding="8dip"
                android:text="业务"
                android:textColor="#000000"
                android:textSize="14sp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="@drawable/ic_profile_header_divider"/>

            <LinearLayout
                android:id="@+id/ll_CustomManager_layout"
                android:layout_width="fill_parent"
                android:layout_height="54dip"
                android:background="@drawable/ic_item_bg"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="8dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="8dip"
                    android:text="客户管理"
                    android:textColor="#ff005092"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/main_CustomManager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:paddingBottom="2dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="2dip"
                    android:text=""
                    android:textColor="#000"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="8dip"
                    android:src="@drawable/ic_list_arrow"/>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:background="#20333333"/>

            <LinearLayout
                android:id="@+id/ll_sendQuest_layout"
                android:layout_width="fill_parent"
                android:layout_height="54dip"
                android:background="@drawable/ic_item_bg"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="8dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="8dip"
                    android:text="发货请求"
                    android:textColor="#ff005092"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/main_sendQuest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:paddingBottom="2dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="2dip"
                    android:text=""
                    android:textColor="#000"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="8dip"
                    android:src="@drawable/ic_list_arrow"/>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:background="#20333333"/>

            <LinearLayout
                android:id="@+id/ll_queryDocument"
                android:layout_width="fill_parent"
                android:layout_height="54dip"
                android:background="@drawable/ic_item_bg"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="8dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="8dip"
                    android:text="查看运单"
                    android:textColor="#ff005092"
                    android:textSize="18sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="8dip"
                    android:src="@drawable/ic_list_arrow"/>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:background="#20333333"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_content_userBindTool"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:padding="8dip"
                android:text="运单"
                android:textColor="#000000"
                android:textSize="14sp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="@drawable/ic_profile_header_divider"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="162dip"
                android:clickable="true"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/main_AcceptRequest_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="54dip"
                    android:background="@drawable/ic_item_bg"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="8dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="8dip"
                        android:text="接收请求"
                        android:textColor="#ff005092"
                        android:textSize="18sp"/>

                    <Button
                        android:id="@+id/main_AcceptRequest_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:paddingBottom="2dip"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:paddingTop="2dip"
                        android:text=""
                        android:textColor="#000"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="8dip"
                        android:src="@drawable/ic_list_arrow"/>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="8dip"
                    android:layout_marginRight="8dip"
                    android:background="#20333333"/>

                <LinearLayout
                    android:id="@+id/main_receive_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="54dip"
                    android:background="@drawable/ic_item_bg"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="8dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="8dip"
                        android:text="待收货"
                        android:textColor="#ff005092"
                        android:textSize="18sp"/>

                    <Button
                        android:id="@+id/main_applydocument_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:paddingBottom="2dip"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:paddingTop="2dip"
                        android:text=""
                        android:textColor="#000"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="8dip"
                        android:src="@drawable/ic_list_arrow"/>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="8dip"
                    android:layout_marginRight="8dip"
                    android:background="#20333333"/>

                <LinearLayout
                    android:id="@+id/main_deliverable_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="54dip"
                    android:background="@drawable/ic_item_bg"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="8dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="8dip"
                        android:text="待派件"
                        android:textColor="#ff005092"
                        android:textSize="18sp"/>

                    <Button
                        android:id="@+id/main_deliverable_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:paddingBottom="2dip"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:paddingTop="2dip"
                        android:text=""
                        android:textColor="#000"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="8dip"
                        android:src="@drawable/ic_list_arrow"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:background="#20333333"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="今日统计"
                    android:textSize="20sp"/>

                <ImageView
                    android:id="@+id/statistics_flash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/refresh"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/item_statistics_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="运费：0"
                            android:textSize="20sp"
                            android:textStyle="bold"/>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:background="#20333333"/>

            <Button
                android:id="@+id/btn_main_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="定位服务已开启"/>

            <TextView
                android:id="@+id/tv_main_service_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="定位状态"
                android:textColor="#000"
                android:textSize="20sp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:background="#20333333"/>

            <LinearLayout
                android:id="@+id/ll_main_rollin_error_documents"
                android:layout_width="fill_parent"
                android:layout_height="54dip"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="8dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="8dip"
                    android:text="异常订单"
                    android:textColor="#ff005092"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/btn_main_error_documents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:paddingBottom="2dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="2dip"
                    android:text=""
                    android:textColor="#000"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="8dip"
                    android:src="@drawable/ic_list_arrow"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/main_left_lv"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#fff"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"></ListView>

</android.support.v4.widget.DrawerLayout>