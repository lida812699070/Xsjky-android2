<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_updata_productName"
            style="@style/UpdataCargoInfosItemEt"
            android:hint="品名"/>

        <EditText
            android:inputType="number"
            android:id="@+id/et_updata_qty"
            style="@style/UpdataCargoInfosItemEt"
            android:hint="件数"/>

        <Button
            android:id="@+id/btn_updata_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="删除"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:inputType="numberDecimal"
            android:id="@+id/et_updata_Length"
            style="@style/UpdataCargoInfosItemEt"
            android:hint="长度"/>

        <EditText
            android:inputType="numberDecimal"
            android:id="@+id/et_updata_Width"
            style="@style/UpdataCargoInfosItemEt"
            android:hint="宽度"/>

        <EditText
            android:inputType="numberDecimal"
            android:id="@+id/et_updata_height"
            style="@style/UpdataCargoInfosItemEt"
            android:hint="高度"/>

        <EditText
            android:inputType="numberDecimal"
            android:id="@+id/et_updata_Volumn"
            style="@style/UpdataCargoInfosItemEt"
            android:hint="体积"/>

    </LinearLayout>
    <EditText
        android:id="@+id/et_updata_remarks"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="备注"/>
    <View
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:background="#ccc"
        android:layout_height="2px"></View>
</LinearLayout>