<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="48dip"
    android:background="@drawable/flipper_head_blue_background"
    android:clickable="true"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/head_flip"
        android:layout_width="54dip"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:background="@drawable/flipper_head_title_wrapper_background"
        android:clickable="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_flipper_head_flip" 
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="2px"
        android:layout_height="24dip"
        android:layout_gravity="center"
        android:src="@drawable/flipper_head_separator" />

    <TextView
        android:id="@+id/head_title"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="8dip"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />
    
    <ImageView
        android:id="@+id/head_tool1"
        android:layout_width="54dip"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:background="@drawable/flipper_head_title_wrapper_background"
        android:clickable="true"
        android:src="@drawable/ic_add_bill"
        android:scaleType="centerInside"
        android:visibility="gone"
        />
    
    <ImageView
        android:id="@+id/head_tool2"
        android:layout_width="54dip"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:background="@drawable/flipper_head_title_wrapper_background"
        android:clickable="true"
        android:scaleType="centerInside"
        android:visibility="gone"
        />
    
    <ImageView
        android:id="@+id/head_refresh"
        android:layout_width="54dip"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:background="@drawable/flipper_head_title_wrapper_background"
        android:clickable="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_flipper_head_refresh" 
        android:visibility="gone" />

</LinearLayout>