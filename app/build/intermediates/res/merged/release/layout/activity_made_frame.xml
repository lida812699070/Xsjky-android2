<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">

    <include layout="@layout/weiget_head"></include>
    <LinearLayout
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textColor="@color/text_btn_seleor"
            android:text="选择制作人"
            android:background="@drawable/login_btn"
            android:id="@+id/btn_madeframe_select_worker"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <TextView
            android:textSize="20sp"
            android:id="@+id/tv_madeframe_worker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <include layout="@layout/item_head_madefragm"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_made_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textColor="@color/text_btn_seleor"
            android:id="@+id/btn_mf_add_item"
            android:text="添加"
            android:background="@drawable/login_btn"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"/>
        <Button
            android:textColor="@color/text_btn_seleor"
            android:id="@+id/btn_mf_confirm"
            android:background="@drawable/login_btn"
            android:text="确认"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
