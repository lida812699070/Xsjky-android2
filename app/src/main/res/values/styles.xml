<resources>

    <style name="LoadDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item>
        <!--半透明-->
        <item name="android:windowContentOverlay">@null</item>
        <!--内容覆盖 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!-- 窗口样式Dialog -->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->
        　　
    </style>

    <style name="healthyview_style">
        <item name="android:paddingBottom">32dp</item>
        <item name="android:paddingLeft">60dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">260dp</item>
        <item name="lineWidth">2dp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="coordinatesLineWidth">4px</item>
        <item name="lineColor">#000</item>
        <item name="maxcircleColor">#6acfed</item>
        <item name="coordinatesTextSize">11sp</item>
        <item name="coordinatesTextColor">#808080</item>
    </style>

    <style name="ItemTextViewStyle">
        <item name="android:textColor">#000</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="UpdataCargoInfosItemEt">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/selector_rb_text</item>
    </style>

    <style name="ItemTextViewStyle2">
        <item name="android:textColor">#000</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ItemETStyle">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/edittext_bg</item>
    </style>

</resources>
