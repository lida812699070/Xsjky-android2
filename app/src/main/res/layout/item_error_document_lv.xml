<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2DE8A"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_documentnum_dialog_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:text="title"
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:textColor="#000"
        android:id="@+id/tv_consignee_document_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_title_documentnum_dialog_lv"
        android:layout_alignStart="@+id/tv_title_documentnum_dialog_lv"
        android:layout_below="@+id/tv_title_documentnum_dialog_lv"
        android:layout_marginTop="15dp"
        android:text="@string/recivecom" />

    <Button
        android:layout_centerVertical="true"
        android:id="@+id/btn_error_lv_del"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_title_documentnum_dialog_lv"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:text="删除" />

    <Button
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:id="@+id/btn_error_document_lv_commit"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_error_lv_del"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:layout_toLeftOf="@+id/btn_error_lv_del"
        android:layout_toStartOf="@+id/btn_error_lv_del"
        android:text="确认收件" />
</RelativeLayout>