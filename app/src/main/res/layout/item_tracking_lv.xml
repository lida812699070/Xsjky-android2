<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/selector_item"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/checkbox_item_tracking"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_tracking_lv_tocity"
        style="@style/ItemTextViewStyle2"
        android:text="@string/tocity" />

    <TextView
        android:layout_weight="2"
        android:id="@+id/tv_tracking_lv_docuNum"
        style="@style/ItemTextViewStyle2"
        android:text="@string/docuNUm" />

    <TextView
        android:id="@+id/tv_tracking_lv_qty"
        style="@style/ItemTextViewStyle2"
        android:text="@string/qty" />
    <Button
        android:id="@+id/btn_returnOut_item_tracking"
        android:text="@string/returnOut"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
</LinearLayout>