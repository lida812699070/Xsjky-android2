<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        card_view:contentPadding="10dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_RequestId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="RequestId"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_Appointment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Appointment"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_CargoVolumn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="CargoVoum"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_StatusDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Stat"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_TruckNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="TruckNumber"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_Requester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="TruckNumber"
                android:textColor="#000"
                android:textSize="15sp"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>