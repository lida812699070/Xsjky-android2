<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/ic_item_bg">


    <TextView
        android:id="@+id/applydocument_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dip"
        android:text="姓名"
        android:textColor="#000000"
        android:textSize="16sp" />
    
    <TextView
        android:id="@+id/applydocument_item_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_below="@+id/applydocument_item_name"
        android:text="13555558888"
        android:textColor="#000000"
        android:textSize="16sp" />
    
    
    <TextView
        android:id="@+id/applydocument_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/applydocument_item_name"
        android:layout_below="@+id/applydocument_item_phone"
        android:gravity="center"
        android:paddingLeft="8dip"
        android:text="2015-01-01 11:22:33"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/applydocument_item_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/applydocument_item_time"
        android:layout_below="@+id/applydocument_item_time"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="8dip"
        android:text=""
        android:textSize="14sp" />

    <Button
        android:id="@+id/applydocument_item_location_btn"
        android:padding="10dp"
        android:textColor="@color/text_btn_seleor"
        android:background="@drawable/login_btn"
        android:text="导航"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>